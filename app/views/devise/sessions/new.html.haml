= render 'shared/default-header'
.default-main
  %section.container.login-container
    .login-no-account
      %p
        アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", users_path
    .inner.login-container__inner
      .content
        %button.default-btn.facebook
          %i.fa.fa-facebook-official
          Facebookで登録
        %button.default-btn.google
          %i.fa.fa-google-plus
          Googleで登録
      = form_for(@user, url: session_path(@user)) do |f|
        .form-inner
          .form-group
            = f.email_field :email, autofocus: true, autocomplete: "email",class: "input-default",pladeholder: "メールアドレス"
          .form-group
            = f.password_field :password, autocomplete: "current-password",class: "input-default",placeholder: "パスワード"
          %button.default-btn.btn-red
            = f.submit
            ログイン
          %a
            パスワードをお忘れの方
= render "shared/default-footer"

