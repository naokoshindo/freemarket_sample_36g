.single-container
  = render partial: "/shared/header"

  %main.single-main
    %section.l-single-container
      .buy-container
        / 商品の詳細
        .buy-item-contents
          .buy-items-inner
            %h2.item-name
              = @item.name
          .item-photo
            .owl-carousel
              .owl-stage-outer
                .owl-stage
                  .owl-item
                    .owl-item-inner
                      / - @item.images.each do |image|
                      /   =image_tag image.image, size: "300x300"
                      =image_tag @item.images.first.image, size: "300x300"
              .owl-dots
                .owl-dot
                  %span
                    .owl-dot-inner
                      =image_tag @item.images.first.image, size: "75x75"
                .owl-dot
                  %span
                    .owl-dot-inner
                      - if @item.images.second.present?
                        =image_tag @item.images.second.image, size: "75x75"
                .owl-dot
                  %span
                    .owl-dot-inner
                      - if @item.images.third.present?
                        =image_tag @item.images.third.image, size: "75x75"
                .owl-dot
                  %span
                    .owl-dot-inner
                      - if @item.images.fourth.present?
                        =image_tag @item.images.fourth.image, size: "75x75"
          //table
          %table.item-detail-table
            %tr
              %th 出品者
              %td
                =link_to "#" do
                  =@item.seller.nickname
                .ratings
                  .item-user-ratings
                    %i.fa.fa-smile-o
                    %span 743
                  .item-user-ratings
                    %i.fa.fa-meh-o
                    %span 1
                  .item-user-ratings
                    %i.fa.fa-frown-o
                    %span 0
            %tr
              %th カテゴリー
              %td
                =link_to "#" do
                  ベビーキッズ
                .item-detail-table-sub-category
                  =link_to "#" do
                    %i.fa.fa-angle-right
                    キッズ服（女の子用）100cm〜
                  =link_to "#" do
                    %i.fa.fa-angle-right
                    パンツ
            %tr
              %th ブランド
              %td
                =link_to "#{@item.brand}"
            %tr
              %th 商品のサイズ
              %td
                =@item.size
            %tr
              %th 商品の状態
              %td
                =@item.condition
            %tr
              %th 配送料の負担
              %td
                =@item.delivery_fee
            %tr
              %th 配送の方法
              %td
                =@item.delivery_method
            %tr
              %th 配送元地域
              %td
                =link_to "#" do
                  =@item.area
            %tr
              %th 発送日の目安
              %td
                =@item.standard_shipping_time
          .item-price-box
            .text-center
              %span.item-price
                ¥#{@item.price}
              %span.item-tax (税込)
              %span.item-shipping-fee 送料込み
          %section.visible-sp
            .text-center
              .sales-point-message
                P 500をお持ちです
              %a.item-buy
                = link_to "購入画面に進む", buy_item_path(@item), method: :get, class:"item-buy-btn"
          //商品の説明
          .item-description
            %p.item-description-inner
              =@item.description
          .item-button-container.clearfix
            .item-button-left
              //like機能用
              //=render partial: "likes/like"
              %button.item-button.item-button-like
                = link_to "#" do
                  %i.fa.fa-heart-o
                  %span いいね
                  %span.fade-in-down 9
              %button.item-button.item-button-report.clearfix
                = link_to "#" do
                  %span 不適切な商品の報告
            .item-button-right
              = link_to "#" do
                %i.fa.fa-lock
                  %span あんしん・あんぜんへの取り組み
          / modal
          .modal-inner
            .modal-inner__modal-body
              .modal-inner__modal-body__modal-head 確認
              .modal-inner__modal-body__modal-desc 削除すると二度と復活できません。<br>削除する代わりに停止することもできます。<br><br>本当に削除しますか？
            .modal-inner__btns
              =link_to "キャンセル", "/items/edit", class: "modal-inner__btns__btn-cancel"
              =link_to "削除する", "/items/#{@item.id}", method: :delete, class: "modal-inner__btns__btn-delete"
        / 編集ボタン
        %if item.current_user.id == current_user.id
        .buy-item-contents
          .buttons-wrap
            .item-edit-buttons.button-red.btn-default 
              = link_to "商品を編集する", "/items/#{@item.id}/edit", method: :get, class: "a"
            %p or
            %form
              %input  
              %button.button-gray.btn-default 出品を一旦停止する
              %button#item-delete.button-gray.btn-default この商品を削除する
          .buy-item-contents
            .item-detail-message
              .messager-container
                .message-content
                  = form_for :form do |f|
                    %form.message-form
                      %p.message-form
                        相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
                    = f.text_area :form,class: "textarea-default"
                  %button.message-submit.btn-default.btn-gray
